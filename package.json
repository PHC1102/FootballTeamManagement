{
  "name": "football-team-management",
  "version": "1.0.0",
  "description": "A football team management application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:info": "echo Server will start on http://localhost:5000 && echo Frontend will be available at http://localhost:3000 && nodemon server.js",
    "build": "cd client && npm run build",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "dev:all": "concurrently \"npm run server\" \"npm run client\""
  },
  "keywords": ["football", "team", "management"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}